/*!  RORAIMA - RR  */

// Colors
$branco = rgba(255, 255, 255, 1)
$verde = rgba(1,159,111,1)
$vermelho = rgba(231, 76, 60,1)
$azul = rgba(41, 128, 185,1)
$amarelo = rgba(254,230,60,1)

.flag-rr
  background-image linear-gradient(
    -32deg,
    $verde 36%,
    $branco 36%,
    $branco 65%,
    $azul 65%
  )

  &:before
    content '\2605'
    color $amarelo
    font-size 176px
    display flex
    width 100%
    height 100%
    align-items center
    justify-content center
    margin-top -8px

  &:after
    width 300px
    height 10px
    margin-top 174px
    background $vermelho
